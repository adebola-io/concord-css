{
  "name": "streamline",
  "version": "1.0.0",
  "description": "A CSS and Javascript framework for custom sematic HTML and UI design.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "compile-css": "sass ./src/scss/streamline.app.scss:./dist/css/streamline.app.css",
    "minify-css": "minify ./dist/css/streamline.app.css > ./dist/css/streamline.app.min.css",
    "compile-js": "gulp scripts",
    "minify-js": "minify ./dist/js/streamline.app.js > ./dist/js/streamline.app.min.js",
    "watch-style": "sass --watch ./src/scss/streamline.app.scss:./dist/css/streamline.app.css",
    "build": " node scripts/compilingcss.js && npm run compile-css && node scripts/minifyingcss.js && npm run minify-css && node scripts/concatenating.js && npm run compile-js && node scripts/minifyingjs.js && npm run minify-js && node scripts/build.js",
    "show": "echo lalalala"
  },
  "keywords": [
    "CSS",
    "Framework",
    "Javascript",
    "SCSS"
  ],
  "author": "Adebola Akomolafe",
  "license": "ISC",
  "dependencies": {
    "colors": "^1.4.0",
    "gulp": "^4.0.2",
    "minify": "^8.0.3",
    "sass": "^1.43.3",
    "scss": "^0.2.4"
  },
  "devDependencies": {
    "gulp-concat": "^2.6.1",
    "typescript": "^4.3.5"
  }
}
